<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>
    
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Orders.
    -->
    <changeSet id="20190801044932-1" author="jhipster">
        <createTable tableName="orders">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_date" type="date">
                <constraints nullable="false" />
            </column>

            <column name="due_date" type="date">
                <constraints nullable="true" />
            </column>

            <column name="ship_date" type="date">
                <constraints nullable="true" />
            </column>

            <column name="payment_status" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="order_flag" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="order_number" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="sub_total" type="${floatType}">
                <constraints nullable="true" />
            </column>

            <column name="tax_amount" type="${floatType}">
                <constraints nullable="true" />
            </column>

            <column name="frieight" type="${floatType}">
                <constraints nullable="true" />
            </column>

            <column name="total_due" type="${floatType}">
                <constraints nullable="true" />
            </column>

            <column name="comments" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="delivery_instructions" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="internal_comments" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="picking_completed_when" type="date">
                <constraints nullable="true" />
            </column>
            <column name="review_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_orders_review_id" />
            </column>
            <column name="customer_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="ship_to_address_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="bill_to_address_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="ship_method_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="currency_rate_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="special_deals_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
    
    <!-- Added the entity audit columns -->
    <changeSet id="20190911070331-audit-1" author="jhipster-entity-audit">
        <addColumn tableName="orders">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </addColumn>
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
